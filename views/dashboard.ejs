<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css"
    />
    <link rel="stylesheet" href="/css/dashboad/account.css" />
    <link
      rel="stylesheet"
      media="(max-width: 769px)"
      href="/css/dashboad/mobile-dashboard.css"
    />
    <link rel="shortcut icon" href="/asset/R.png" type="image/x-icon" />
    <title>Cryptauxo dashboard</title>
  </head>
  <body>
    <div class="nav">
      <div class="logo">
        <div class="company-name">
          <a class="highlight" href="/dashboard">CRYPTAUXO</a>
        </div>
        <div class="hamburger">
          <i class="bi bi-list" style="color: aliceblue; font-size: 2rem"></i>
          <i class="bi bi-x-lg" style="color: aliceblue; font-size: 2rem"></i>
        </div>
      </div>
      <ul>
        <div>
          <li style="background-color: rgba(0, 255, 255, 0.411)">
            <a href="#"
              ><i
                class="bi bi-wallet2"
                style="color: rgb(52, 241, 52); padding: 0 10px"
              ></i
              >Dashboard</a
            >
          </li>
          <li>
            <a href="./account-history"
              ><i
                class="bi bi-book"
                style="color: rgb(52, 241, 52); padding: 0 10px"
              ></i
              >Account History</a
            >
          </li>
          <li>
            <a href="/profile"
              ><i
                class="bi bi-person-circle"
                style="color: rgb(52, 241, 52); padding: 0 10px"
              ></i
              >Profile</a
            >
          </li>
          <li>
            <a href="/exchange"
              ><i
                class="bi bi-currency-exchange"
                style="color: rgb(52, 241, 52); padding: 0 10px"
              ></i
              >Exchange</a
            >
          </li>
        </div>
        <div class="hide-logout">
          <a href="/logout" role="button">Log out</a>
        </div>
      </ul>
      <div class="log-out">
        <a href="/logout" role="button">Log out</a>
      </div>
    </div>
    <div class="screen">
      <div class="account-details">
        <div class="account-name">
          <h4><%= firstname %> <%= lastname %></h4>
          <p>
            <i class="bi bi-envelope" style="font-size: 1.2rem"></i>
            <span style="margin-left: 8px"><%= email %></span>
          </p>
        </div>
        <div class="account-user">
          <p>User ID: <%= ID %></p>
          <p>Status: <span style="color: green">online</span></p>
        </div>
        <div class="account-balance">
          <h4>Account balance</h4>
          <p id="account-balance"><%= amount %> BTC</p>
        </div>
        <div class="account-value">
          <h4>Estimated value</h4>
          <p id="balance">
            $
            <span class="deposit-btn"
              ><a href="/account-history">Deposit</a></span
            >
          </p>
        </div>
      </div>
      <div
        class="live-data"
        style="overflow-x: auto; white-space: nowrap"
      ></div>
      <div class="recent-transactions">
        <h3>Recent orders</h3>
        <div class="transaction-container">
          <h5>no trade yet!</h5>
        </div>
      </div>
      <div class="market-value">
        <h2>Market Value</h2>
        <div class="markets">
          <div class="market-record">
            <h4>Symbols</h4>
            <% if (Array.isArray(markets)) { %> <% markets.forEach(m => { %>
            <li><%= m. name %></li>
            <% }) %> <% } else { %>
            <li>Market data is not available</li>
            <% } %>
          </div>
          <div class="market-record">
            <h4>Price</h4>
            <% if (Array.isArray(markets)) { %> <% markets.forEach(m => { %>
            <li><%= m.price %></li>
            <% }) %> <% } else { %>
            <li>Market data is not available</li>
            <% } %>
          </div>
          <div class="market-record">
            <h4>24 Change</h4>
            <% if (Array.isArray(markets)) { %> <% markets.forEach(m => { %>
            <li><%= m.change %></li>
            <% }) %> <% } else { %>
            <li>Market data is not available</li>
            <% } %>
          </div>
          <div class="market-record">
            <h4>Volume</h4>
            <% if (Array.isArray(markets)) { %> <% markets.forEach(m => { %>
            <li><%= m.last_updated %></li>
            <% }) %> <% } else { %>
            <li>Market data is not available</li>
            <% } %>
          </div>
        </div>
      </div>
    </div>
    <script src="/dashboard.js"></script>
  </body>
</html>
