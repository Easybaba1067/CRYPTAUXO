<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css"
    />
    <link rel="stylesheet" href="/css/dashboad/profile.css" />
    <link
      rel="stylesheet"
      media="(max-width: 769px)"
      href="/css/dashboad/mobile-dashboard.css"
    />
    <link rel="shortcut icon" href="/asset/R.png" type="image/x-icon" />
    <title>Cryptauxo profile</title>
  </head>
  <body>
    <div class="nav">
      <div class="logo">
        <div class="company-name">
          <a class="highlight" href="/dashboard">CRYPTAUXO</a>
        </div>
        <div class="hamburger">
          <i class="bi bi-list" style="color: aliceblue; font-size: 2rem"></i>
          <i class="bi bi-x-lg" style="color: aliceblue; font-size: 2rem"></i>
        </div>
      </div>
      <ul>
        <div>
          <li>
            <a href="/dashboard"
              ><i
                class="bi bi-wallet2"
                style="color: rgb(52, 241, 52); padding: 0 10px"
              ></i
              >Dashboard</a
            >
          </li>
          <li>
            <a href="./account-history"
              ><i
                class="bi bi-book"
                style="color: rgb(52, 241, 52); padding: 0 10px"
              ></i
              >Account History</a
            >
          </li>
          <li style="background-color: rgba(0, 255, 255, 0.411)">
            <a href="/profile"
              ><i
                class="bi bi-person-circle"
                style="color: rgb(52, 241, 52); padding: 0 10px"
              ></i
              >Profile</a
            >
          </li>
          <li>
            <a href="/exchange"
              ><i
                class="bi bi-currency-exchange"
                style="color: rgb(52, 241, 52); padding: 0 10px"
              ></i
              >Exchange</a
            >
          </li>
        </div>
        <div class="hide-logout">
          <a href="/logout" role="button">Log out</a>
        </div>
      </ul>
      <div class="log-out">
        <a href="" role="button">Log out</a>
      </div>
    </div>
    <div class="account-details">
      <div class="account-name">
        <h4 style="color: rgb(43, 240, 43)">Name</h4>
        <h4><%= firstname %> <%= lastname %></h4>
      </div>
      <div class="account-user">
        <h4 style="color: rgb(43, 240, 43)">Email</h4>
        <p>
          <i
            class="bi bi-envelope"
            style="padding: 10px 5px; font-size: 1.5rem"
          ></i>
          <%= email %>
        </p>
      </div>
      <div class="account-balance">
        <h4 style="color: rgb(43, 240, 43)">Phone</h4>
        <p>
          <i
            class="bi bi-telephone"
            style="padding: 10px 5px; font-size: 1.5rem"
          ></i>
          <%= number %>
        </p>
      </div>
      <div class="account-value">
        <h4 style="color: rgb(43, 240, 43)">Address</h4>
        <p>
          <i
            class="bi bi-person-lines-fill"
            style="padding: 10px 5px; font-size: 1.5rem"
          ></i>
          <%= address %>
        </p>
      </div>
      <div class="account-date">
        <h4 style="color: rgb(43, 240, 43)">DOB</h4>
        <p>
          <i
            class="bi bi-cake2"
            style="padding: 10px 5px; font-size: 1.5rem"
          ></i>
          <%= DOB %>
        </p>
      </div>
    </div>
    <div class="customize-data">
      <form action="/profile" method="post">
        <h2>Profile setting</h2>
        <div>
          <input
            class="long-input"
            type="text"
            placeholder="first name"
            name="firstname"
            required
          />
          <input
            class="long-input"
            type="text"
            placeholder="last name"
            name="lastname"
            required
          />
        </div>
        <div>
          <input type="email" placeholder="Email" name="email" required />
          <input type="hidden" name="amount" value="$1000.00" />
          <input
            type="phone"
            placeholder="Mobile number"
            name="mobileNumber"
            required
          />
          <input
            type="text"
            placeholder="Company name"
            name="companyName"
            required
          />
        </div>
        <div>
          <input type="text" placeholder="Website url" name="url" required />
          <input
            type="number"
            placeholder="Postal code"
            name="postalCode"
            required
          />
          <input type="date" placeholder="date of birth" name="DOB" required />
        </div>
        <div>
          <label for="country">
            <select id="country" required>
              <option value="">Select Country</option>
            </select>
          </label>

          <input type="text" placeholder="State/Province" required />
          <input type="text" placeholder="City" required />
        </div>
        <div>
          <textarea
            name="address"
            id=""
            placeholder="input your address"
            required
          ></textarea>
        </div>
        <button type="submit">Save</button>
      </form>
    </div>
    <div class="information-setting">
      <div class="information">
        <h2>Authentication Edit</h2>
        <form action="">
          <input type="text" placeholder="@Username" />
          <input type="password" placeholder="password" />
          <input type="password" placeholder="confirm password" />
          <button type="submit">submit</button>
        </form>
      </div>
      <div class="information">
        <h2>Notification preference</h2>
        <p>
          Control all our newsletter and email-related notifications to your
          email
        </p>
        <form>
          <form>
            <div class="toggle-container">
              <label class="switch">
                <input type="checkbox" name="toggle" id="toggleInput1" />
                <span class="slider"></span>
              </label>
              <label for="toggleInput">Email preference</label>
            </div>
            <div class="toggle-container">
              <label class="switch">
                <input type="checkbox" name="toggle" id="toggleInput2" />
                <span class="slider"></span>
              </label>
              <label for="toggleInput">Comment notifications</label>
            </div>
            <div class="toggle-container">
              <label class="switch">
                <input type="checkbox" name="toggle" id="toggleInput3" />
                <span class="slider"></span>
              </label>
              <label for="toggleInput">Activity notifications</label>
            </div>
          </form>
        </form>
      </div>
    </div>
    <script src="/dashboard.js"></script>
    <script src="/information.js" defer></script>
  </body>
</html>
